@model JWMaps.ViewModel.TerritoryMapViewModel

@{
    ViewBag.Title = "Criando o mapa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Como será o mapa?</h2>

@using (Html.BeginForm("New", "TerritoryMaps", FormMethod.Post))
{
    <div class="form-group">
        <label>Bairro</label>
        @Html.ValidationMessageFor(t => t.selectedNeighbourhood)
        @Html.DropDownListFor(t => t.selectedNeighbourhood, new SelectList(Model.Neighbourhoods), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Tipo de endereço</label>
        @Html.EnumDropDownListFor(m => m.Category, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Category)
    </div>
    <div class="form-group">
        <label>Distância máxima entre endereços em Km</label>
        @Html.TextBoxFor(t => t.MaxDistanceAmongHouseholders, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.MaxDistanceAmongHouseholders)
    </div>
    <div class="form-group">
        <label>Número máximo de moradores</label>
        @Html.TextBoxFor(t => t.MaxNumberOfHouseholders, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.MaxNumberOfHouseholders)
    </div>

    <div id="divLoading">
    </div>

    <button type="submit" class="btn btn-primary" onclick='showLoading();'>Criar!</button>
}
<br />
<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section scripts
{
    <script type="text/javascript" language="javascript">
        function showLoading() {
            $("div#divLoading").addClass('show');
        }
    </script>
}